{
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "framework": "vite",
    "functions": {
        "api/**": {
            "runtime": "nodejs20.x"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}